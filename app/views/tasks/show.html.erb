<div class="card">
  <p><%= @task.title %></p>
  <p><%= @task.details %></p>
  <i class="fa-regular fa-circle<%= @task.completed ? "-check" : ''%>"></i>
</div>
<%= link_to "edit", edit_task_path(@task), :class => 'btn btn-primary m-2' %>
<%= link_to "Delete",
  task_path(@task),
  :class => 'btn btn-primary m-2',
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Home", tasks_path, :class => 'btn btn-primary m-2' %>
