<%= form_with model: task do |f| %>
  <%= f.label :title , :class => 'form-control'%>
  <%= f.text_field :title, :class => 'form-control' %>
  <%= f.label :details, :class => 'form-control' %>
  <%= f.text_field :details, :class => 'form-control' %>
  <% if task.persisted? %>
    <%= f.label :completed, :class => 'form-control' %>
    <%= f.check_box :completed, :class => 'form-control' %>
  <% end %>
  <%= f.submit %>
<% end %>
